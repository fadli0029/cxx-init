# Google C++ Style Guide compliant clang-format configuration
BasedOnStyle: Google

# Core indentation (Google uses 2 spaces)
IndentWidth: 2
TabWidth: 2
UseTab: Never
ContinuationIndentWidth: 4

# Line length
ColumnLimit: 80

# Access modifiers (public/private/protected) indented 1 space less
AccessModifierOffset: -1

# Alignment
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false
AlignEscapedNewlines: Left
AlignOperands: true
AlignTrailingComments: true

# Short forms
AllowShortBlocksOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false
AllowShortFunctionsOnASingleLine: Inline
AllowShortIfStatementsOnASingleLine: WithoutElse
AllowShortLoopsOnASingleLine: true
AllowShortLambdasOnASingleLine: All

# Breaking
AlwaysBreakAfterReturnType: None
AlwaysBreakBeforeMultilineStrings: true
AlwaysBreakTemplateDeclarations: Yes
BinPackArguments: true
BinPackParameters: true
BreakBeforeBinaryOperators: None
BreakBeforeBraces: Attach
BreakBeforeTernaryOperators: true
BreakConstructorInitializers: BeforeColon
BreakInheritanceList: BeforeColon
BreakStringLiterals: true

# Braces and blocks
Cpp11BracedListStyle: true
IndentCaseLabels: true
IndentPPDirectives: None
KeepEmptyLinesAtTheStartOfBlocks: false

# Namespace
NamespaceIndentation: None
CompactNamespaces: false
FixNamespaceComments: true

# Empty lines
MaxEmptyLinesToKeep: 1

# Pointer alignment (Google: left-aligned with type)
DerivePointerAlignment: false
PointerAlignment: Left

# Spacing
SpaceAfterCStyleCast: false
SpaceAfterLogicalNot: false
SpaceAfterTemplateKeyword: true
SpaceBeforeAssignmentOperators: true
SpaceBeforeCpp11BracedList: false
SpaceBeforeCtorInitializerColon: true
SpaceBeforeInheritanceColon: true
SpaceBeforeParens: ControlStatements
SpaceBeforeRangeBasedForLoopColon: true
SpaceInEmptyParentheses: false
SpacesBeforeTrailingComments: 2
SpacesInAngles: false
SpacesInCStyleCastParentheses: false
SpacesInContainerLiterals: true
SpacesInParentheses: false
SpacesInSquareBrackets: false

# Includes (Google ordering)
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<ext/.*\.h>'
    Priority: 2
  - Regex: '^<.*\.h>'
    Priority: 1
  - Regex: '^<.*>'
    Priority: 2
  - Regex: '.*'
    Priority: 3
SortIncludes: true

# C++ standard
Standard: Auto

# Penalties (for line breaking decisions)
PenaltyBreakAssignment: 2
PenaltyBreakBeforeFirstCallParameter: 1
PenaltyBreakComment: 300
PenaltyBreakFirstLessLess: 120
PenaltyBreakString: 1000
PenaltyExcessCharacter: 1000000
PenaltyReturnTypeOnItsOwnLine: 200

# Other
ReflowComments: true
SortUsingDeclarations: true

---
# Modern C Style
Language: C

# Base on Google for consistency, override where C differs
BasedOnStyle: Google

# Indentation
IndentWidth: 2
TabWidth: 2
UseTab: Never
ContinuationIndentWidth: 4

# Line length
ColumnLimit: 80

# Braces - Attach style (not K&R with function braces on new line)
BreakBeforeBraces: Attach

# Pointer alignment
# int* ptr, not int *ptr (old K&R style)
DerivePointerAlignment: false
PointerAlignment: Left

# Declarations - don't force all at top of block (old C89 requirement)
# Modern C allows declarations anywhere
AllowShortBlocksOnASingleLine: false
AllowShortFunctionsOnASingleLine: Inline
AllowShortIfStatementsOnASingleLine: WithoutElse
AllowShortLoopsOnASingleLine: true

# Case labels - indent for clarity
IndentCaseLabels: true
IndentCaseBlocks: false

# Modern: designated initializers, compound literals formatting
Cpp11BracedListStyle: false
SpacesInContainerLiterals: false

# Function declarations - readable parameter lists
AlignAfterOpenBracket: Align
BinPackArguments: true
BinPackParameters: true
AllowAllArgumentsOnNextLine: true
AllowAllParametersOfDeclarationOnNextLine: true

# Align macros and backslashes cleanly
AlignConsecutiveMacros: AcrossEmptyLines
AlignEscapedNewlines: Left
IndentPPDirectives: AfterHash

# Includes - don't sort (order matters in C, especially systems code)
SortIncludes: false

# Spacing
SpaceAfterCStyleCast: false
SpaceBeforeParens: ControlStatements
SpacesBeforeTrailingComments: 2
SpaceInEmptyParentheses: false
SpacesInParentheses: false

# Keep empty lines reasonable
MaxEmptyLinesToKeep: 1
KeepEmptyLinesAtTheStartOfBlocks: false

# Penalties
PenaltyBreakBeforeFirstCallParameter: 19
PenaltyBreakComment: 300
PenaltyBreakString: 1000
PenaltyExcessCharacter: 1000000
PenaltyReturnTypeOnItsOwnLine: 60

# Comments
ReflowComments: true
AlignTrailingComments: true
